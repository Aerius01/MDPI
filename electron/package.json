{
    "name": "mdpi-electron",
    "version": "0.1.0",
    "description": "Electron GUI for MDPI pipeline that runs Dockerized backend",
    "main": "main.js",
    "type": "module",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder -c.extraMetadata.main=main.js",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --publish never"
    },
    "dependencies": {
        "electron-updater": "^6.3.9"
    },
    "devDependencies": {
        "electron": "31.3.0",
        "electron-builder": "24.13.3"
    },
    "build": {
        "appId": "com.mdpi.electron",
        "productName": "MDPI",
        "asar": true,
        "files": [
            "renderer/**",
            "resources/**",
            "main.js",
            "preload.cjs",
            "setup-preload.cjs",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "../docker/",
                "to": "docker/",
                "filter": [
                    "server.py"
                ]
            }
        ],
        "mac": {
            "target": [
                "dmg"
            ],
            "category": "public.app-category.utilities",
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "publisherName": "MDPI"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Utility",
            "artifactName": "${productName}-${version}-${arch}.${ext}"
        }
    }
}